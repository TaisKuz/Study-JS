.installButtonTop
  background-color: #000
  background-position: center
  background-repeat: no-repeat
  background-size: cover
  border-radius: 6px

  &-apple
    background-image: url('/img/appStore.svg') !important
    width: 142px
    height: 44px
    margin-right: -7px

  &-appleLink
    display: inline-block
    width: 142px
    height: 44px
    margin-right: -7px

    &:hover
      cursor: pointer

  &-google
    background-image: url('/img/googlePlay.svg') !important
    margin-left: -3px
    width: 137.48px
    height: 42.33px

  &-googleLink
    display: inline-block
    width: 137.48px
    height: 42.33px

    &:hover
      cursor: pointer