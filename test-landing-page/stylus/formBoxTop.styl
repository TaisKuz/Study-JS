.formBoxTop
  &-title
    font-family: "Museo", Arial, sans-serif
    font-weight: 100
    font-size: 13px
    line-height: 16px
    letter-spacing: 0.52px
    margin: 29px 0 11px

  &-emailForm
    display: flex
    flex-wrap: nowrap
    justify-content: space-between
    align-items: center
    border-radius: 6px
    margin: 0 auto
    background-color: #fff
    width: 304px
    height: 48px

  &-submitEmail,
  &-inputEmail
    font-family: "Museo", Arial, sans-serif
    font-weight: 300
    text-align: left
    padding-left: 15px
    color: #808080

  &-submitEmail
    text-transform: uppercase
    margin-right: 20px
    background-color: #fff
    font-size: 12px
    line-height: 15px
    border-left: 1px solid #808080
    height: 22px

  &-inputEmail
    height: 26px
    padding: 14px 25px 14px 15px
    border-radius: 6px
    background-color: transparent
    font-size: 16px
    line-height: 18px