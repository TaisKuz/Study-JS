@import '/fonts/Roboto/Roboto-BoldItalic.styl'
@import '/fonts/Roboto/Roboto-Medium.styl'
@import '/fonts/Roboto/Roboto-Bold.styl'
@import '/fonts/Roboto/Roboto-Regular.styl'
@import '/fonts/Roboto/Roboto-Black.styl'
@import '/fonts/Roboto/Roboto-Thin.styl'

@import '/reset.styl'
@import '/variables.styl'

.main
  @media $mobile
    background-color #000
    color: #fff
    z-index 0

    & .installBtn.googlePlayBtn
      background-color #000
      background-image url("/../img/android/googlePlayBtn.png")
      background-repeat no-repeat
      background-position center
      background-size cover
      border-radius 6px
      width 203px
      height 60px

    & .item_inline
      display inline-block

    &-containerWrapper
      width: 100%
      height 100%

    &-content
      margin: 0 30px
      z-index 6

    &-top
      background-color #000
      position relative
      text-align: left
      z-index 1

      &__mini-phones
        position absolute
        background-image url("/../img/android/mini-phones_android.png")
        background-repeat no-repeat
        background-position 67px -78px
        background-size 94%
        background-color transparent
        width 427px
        height 451px
        right 0px
        top 0px
        z-index 3

      &_gradient
        background linear-gradient(to bottom, rgba(72,43,216,1) 33%,rgba(72,43,216,0.39) 59%,rgba(53,32,160,0.25) 71%,rgba(0,0,0,0.25) 100%);
        background-color transparent
        width: 100%
        height 1190px
        position absolute
        z-index -1

      & .zvooq-logo
        width 68.65px
        height 68.65px
        border-radius 4px
        margin-bottom 20px
        margin-top: 131px
        z-index 7

      &__title-Zvooq
        background-image url("/../img/title-Zvooq.svg")
        background-repeat no-repeat
        background-position center
        background-size cover
        width 137px
        height 71px
        margin-bottom 29px
        z-index 7

      & .installBtn.installBtn_top.googlePlayBtn
        margin-bottom 31px
        z-index 7

      &__title-music
        position relative
        font-family: "Roboto-Bold"
        font-size: 50px
        line-height 45px
        letter-spacing: 2px
        margin-bottom 33px
        text-align: left
        z-index 7

        & .icon-note
          display inline-block
          position relative
          top 5px
          left 3px
          background-image url("/../img/icon-note.svg")
          background-repeat no-repeat
          width 32px
          height 37px
          z-index 8

      &__title-listenFree
        font-family: "Roboto-Regular"
        font-size: 24px
        line-height 28px
        margin-bottom: 10px
        text-align: left
        z-index 7

      &__title-torrents,
      &__title-trial
        font-family: "Roboto-Thin"
        font-weight 100
        font-size: 14px
        line-height 19px
        text-align: left
        z-index 7

      &__title-torrents
        margin-bottom: 10px
        z-index 7

      &-group25
        text-align center
        position relative
        z-index 7

        &__title-25
          color #E93889 //pink
          font-family "Roboto-Black"
          font-size 250px
          line-height 250px
          width 100%
          text-align center
          z-index 8

        &__title-million
          z-index: 10000
          position absolute
          top 42%
          width 100%
          color #fff
          font-family "Roboto-Regular"
          font-size 25px
          line-height 28px
          text-align center
          z-index 9

      &-playGroup
        height 323px
        width 100%
        position relative
        z-index 7

        & .play-home,
        & .play-vk,
        & .play-training
          position absolute
          background-repeat no-repeat
          background-position center
          background-size cover
          z-index 10

        & .play-home
          background-image url("/../img/android/play-home-android.png")
          width 333px
          height 228.85px
          right -30px
          top -97px
          z-index 14

        & .play-vk
          background-image url("/../img/android/play-vk-android.png")
          width: 267px
          height: 186.9px
          left: -83px
          top: -25px
          z-index 11

        & .play-training
          background-image url("/../img/android/play-training-android.png")
          width 333px
          height 228.85px
          left -20px
          bottom 0px
          z-index 12

      &__title-thousand
        margin-top 10px
        margin-bottom 13px
        font-family "Roboto-Regular"
        font-size 25px
        line-height 28px
        text-align left

      &__title-oneClick
        font-family "Roboto-Thin"
        font-size 14px
        line-height 19px
        text-align left

        z-index 10

      &-heartWaves
        position relative
        left -30px
        background-image url("/../img/heartWaves.svg")
        background-repeat no-repeat
        background-position center
        background-size cover
        width 268px
        height 174px
        z-index 6

      &__title-smart
        font-family "Roboto-Regular"
        font-size 25px
        line-height 28px
        text-align left
        margin-bottom 16px
        z-index 10

      &__title-allULike
        font-family "Roboto-Thin"
        font-size 14px
        line-height 19px
        text-align left
        margin-bottom 35px

      &__title-etc
        font-family "Roboto-Regular"
        font-size 25px
        line-height 28px
        text-align left
        margin-bottom 12px

      &-functionsGroup
        margin-right -30px
        margin-bottom 20px

        & .functionsGroup__item
          border-bottom 1px solid #4A4A4A
          padding 8px 0
          display flex
          align-items flex-start

          &:last-child
            border-bottom none

          &-title
            font-family "Roboto-Thin"
            font-size 14px
            line-height 19px
            letter-spacing 1px
            text-align left

          &-icon
            margin-top 2px
            margin-right 19px
            background-repeat no-repeat
            background-position top left
            background-size 100%

            &.icon-star_color
              background-image url("/../img/icon-star_color.svg")
              width 15px
              height 14px

            &.icon-butterfly_color
              background-image url("/../img/icon-butterfly_color.svg")
              width 14px
              height 12px

            &.icon-shazam_color
              background-image url("/../img/icon-shazam_color.png")
              width 13.3px
              height 13.34px

            &.icon-cloud_color
              background-image url("/../img/icon-cloud_color.svg")
              width 15px
              height 10px

            &.icon-lightning_color
              background-image url("/../img/icon-lightning_color.svg")
              width 12px
              height 15px

    &-premium
      background-color #fff
      width 100%
      padding-top 35px

      & .icon-cherry
        width 79px
        height 79px
        background-image url("/../img/icon-cherry.svg")
        background-repeat no-repeat
        background-position center
        background-size cover
        border-radius 50%

      &__title
        margin-top 11px
        margin-bottom 25px
        color #000
        font-family "Roboto-Bold"
        font-size 25px
        line-height 28px
        text-align left

      &-functionsGroup
        padding-bottom 15px

      & .functionsGroup__item
        padding-bottom 30px
        display flex
        align-items center

        &-title
          color #000
          font-family "Roboto-Regular"
          font-size 14px
          line-height 24px
          opacity .87

        &-icon
          margin-right 15px
          background-repeat no-repeat
          background-position top left
          background-size cover

        & .icon-download_black
          background-image url("/../img/android/icon-download_black.svg")
          width 18px
          height 18px

        & .icon-plane_black
          background-image url("/../img/android/icon-plane_black.svg")
          width 16.88px
          height 18px

        & .icon-rewind_black
          background-image url("/../img/android/icon-rewind_black.svg")
          width 19px
          height 12px

        & .icon-diamond_black
          background-image url("/../img/android/icon-diamond_black.svg")
          width 20px
          height 18px

        & .icon-butterfly_black
          background-image url("/../img/android/icon-butterfly_black.svg")
          width 18px
          height 15px

    &-tryIt
      position relative
      width 100%
      background-color #000
      background-image url("/../img/android/tryIt_gradient-android.png")
      background-repeat no-repeat
      background-position -22px -177px
      background-size 93%
      padding 24px 0

      &__title-try
        font-family "Roboto-Regular"
        font-size 25px
        line-height 28px
        text-align left
        margin-bottom 4px

      &__title-free
        font-family "Roboto-Thin"
        font-size 14px
        line-height 19px
        margin-bottom 10 px

    &-partners
      background-color #2C2C2C
      width 100%
      padding 25px 0 30px

      &__title
        color #817E82
        font-family "Roboto-Regular"
        font-size 25px
        line-height 28px
        text-align left
        margin-bottom 11px

      &__table
        background-image url("/../img/android/icons-partners-android.png")
        background-repeat no-repeat
        background-position center
        background-size cover
        width 300px
        height 301px
        margin-bottom 22px

      & a
        display block
        text-decoration underline
        margin-bottom 16px
        color #9B9B9B

      & .main-links_normal
        font-family "Roboto-Regular"
        font-weight 100
        font-size 14px
        line-height 19px
        text-align left

      & .main-links_bold
        font-family "Roboto-Thin"
        font-size 18px
        line-height 19px
        text-align left
        color #fff



