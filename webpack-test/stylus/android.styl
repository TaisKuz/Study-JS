@import '/fonts/Roboto/Roboto-BoldItalic.styl'
@import '/fonts/Roboto/Roboto-Medium.styl'
@import '/fonts/Roboto/Roboto-Bold.styl'
@import '/fonts/Roboto/Roboto-Regular.styl'
@import '/fonts/Roboto/Roboto-Black.styl'

@import '/reset.styl'
@import '/variables.styl'

.main
  @media $mobile
    background-color: #000
    color: #fff
    z-index -3

    & .installBtn.googlePlayBtn
      background-color #000
      background-image url("/../img/android/googlePlayBtn.png")
      background-repeat no-repeat
      background-position center
      background-size cover
      border-radius 6px
      width 203px
      height 60px

    & .item_inline
      display inline-block

    &-containerWrapper
      width: 100%
      height 100%

    &-content
      margin: 0 30px

    &-top
      position relative
      text-align: left

      &__mini-phones
        position absolute
        background-image url("/../img/android/mini-phones_android.png")
        background-repeat no-repeat
        background-position center
        background-size cover
        width 427px
        height 451px
        right -140px
        top -100px
        z-index 1

      &_gradient
        background -webkit-linear-gradient(top, rgba(72,43,216,1) 0%,rgba(229,229,229,0) 61%)
        width: 100%
        height 990px
        position absolute
        z-index -1

      & .zvooq-logo
        width 68.65px
        height 68.65px
        border-radius 4px
        margin-bottom 20px
        margin-top: 131px

      &__title-Zvooq
        background-image url("/../img/title-Zvooq.svg")
        background-repeat no-repeat
        background-position center
        background-size cover
        width 137px
        height 71px
        z-index 3
        margin-bottom 29px

      & .installBtn.installBtn_top.googlePlayBtn
        margin-bottom 31px

      &__title-music
        position relative
        font-family: "Roboto-Bold"
        font-size: 50px
        line-height 45px
        margin-bottom 33px
        text-align: left

        & .icon-note
          position relative
          top 50px
          right 112px
          background-image url("/../img/icon-note.svg")
          background-repeat no-repeat
          width 32px
          height 37px

      &__title-listenFree
        font-family: "Roboto-Bold"
        font-size: 25px
        line-height 28px
        margin-bottom: 10px
        text-align: left

      &__title-torrents,
      &__title-trial
        font-family: "Roboto-Regular"
        font-size: 14px
        line-height 19px
        text-align: left

      &__title-torrents
        margin-bottom: 10px

      &-group25
        text-align center
        position relative

        &__title-25
          color #E93889 //pink
          font-family "Roboto-Black"
          font-size 250px
          line-height 250px
          width 100%
          text-align center

        &__title-million
          z-index: 10000
          position absolute
          top 42%
          width 100%
          color #fff
          font-family "Roboto-Bold"
          font-size 25px
          line-height 28px
          text-align center

      &-playGroup
        height 333px
        width 100%
        position relative

        & .play-home,
        & .play-vk,
        & .play-training
          position absolute
          background-repeat no-repeat
          background-position center
          background-size cover
          z-index 10

        & .play-home
          background-image url("/../img/android/play-home-android.png")
          width 333px
          height 228.85px
          right -30px
          top -97px
          z-index 14

        & .play-vk
          background-image url("/../img/android/play-vk-android.png")
          width 212px
          height 128.9px
          left -76px
          top 30px
          z-index 11

        & .play-training
          background-image url("/../img/android/play-training-android.png")
          width 333px
          height 228.85px
          left -20px
          bottom 0px
          z-index 12

      &__title-thousand
        margin-top 10px
        margin-bottom 13px
        font-family "Roboto-Bold"
        font-size 25px
        line-height 28px
        text-align left

      &__title-oneClick
        font-family "Roboto-Regular"
        font-size 14px
        line-height 19px
        text-align left
        margin-bottom 15px
        z-index 10

      &-heartWaves
        position relative
        left -30px
        background-image url("/../img/heartWaves.svg")
        background-repeat no-repeat
        background-position center
        background-size cover
        width 268px
        height 154px
        z-index 6

      &__title-smart
        font-family "Roboto-Bold"
        font-size 25px
        line-height 28px
        text-align left
        margin-bottom 16px
        z-index 10

      &__title-allULike
        font-family "Roboto-Regular"
        font-size 14px
        line-height 19px
        text-align left
        margin-bottom 35px

      &__title-etc
        font-family "Roboto-Bold"
        font-size 25px
        line-height 28px
        text-align left
        margin-bottom 15px

      &-functionsGroup
        margin-right -30px
        margin-bottom 20px

        & .functionsGroup__item
          border-bottom 1px solid #4A4A4A
          padding 6px 0
          display flex
          align-items flex-start

          &:last-child
            border-bottom none

          &-title
            font-family "Roboto-Regular"
            font-size 14px
            line-height 19px
            text-align left

          &-icon
            margin-right 19px
            background-repeat no-repeat
            background-position top left
            background-size cover

            &.icon-star_color
              background-image url("/../img/icon-star_color.svg")
              width 15px
              height 14px

            &.icon-butterfly_color
              background-image url("/../img/icon-butterfly_color.svg")
              width 14px
              height 12px

            &.icon-shazam_color
              background-image url("/../img/icon-shazam_color.png")
              width 13.3px
              height 13.34px

            &.icon-cloud_color
              background-image url("/../img/icon-cloud_color.svg")
              width 15px
              height 10px

            &.icon-lightning_color
              background-image url("/../img/icon-lightning_color.svg")
              width 12px
              height 15px

    &-premium
      background-color #fff
      width 100%
      padding-top 35px

      & .icon-cherry
        width 79px
        height 79px
        background-image url("/../img/icon-cherry.svg")
        background-repeat no-repeat
        background-position center
        background-size cover
        border-radius 50%

      &__title
        margin-top 11px
        margin-bottom 25px
        color #000
        font-family "Roboto-Bold"
        font-size 25px
        line-height 28px
        text-align left

      &-functionsGroup
        padding-bottom 15px

      & .functionsGroup__item
        padding-bottom 16px
        display flex
        align-items baseline

        &-title
          color #000
          font-family "Roboto-Regular"
          font-size 14px
          line-height 24px
          opacity .87

        &-icon
          margin-right 15px
          background-repeat no-repeat
          background-position top left
          background-size cover

        & .icon-download_black
          background-image url("/../img/android/icon-download_black.svg")
          width 18px
          height 18px

        & .icon-plane_black
          background-image url("/../img/android/icon-plane_black.svg")
          width 16.88px
          height 18px

        & .icon-rewind_black
          background-image url("/../img/android/icon-rewind_black.svg")
          width 19px
          height 12px

        & .icon-diamond_black
          background-image url("/../img/android/icon-diamond_black.svg")
          width 20px
          height 18px

        & .icon-butterfly_black
          background-image url("/../img/android/icon-butterfly_black.svg")
          width 18px
          height 15px

    &-tryIt
      position relative
      width 100%
      background-color #000
      padding 24px 0
      z-index 10

      &_gradient
        background -webkit-radial-gradient(center, ellipse cover, rgba(193,108,243,1) 0%,rgba(72,43,216,1) 60%,rgba(0,0,0,1) 100%)
        position absolute
        width 456px
        height 456px
        left -60px
        top -60px
        z-index 11

      &__title-try
        font-family "Roboto-Bold"
        font-size 25px
        line-height 28px
        text-align left
        margin-bottom 4px
        padding-top 24px
        z-index 13

      &__title-free
        font-family "Roboto-Regular"
        font-size 14px
        line-height 19px
        margin-bottom 10 px
        z-index 13

       & .installBtn.installBtn_tryIt.googlePlayBtn
         margin-bottom 24px
         z-index 13

    &-partners
      background-color #2C2C2C
      width 100%
      padding 25px 0 42px

      &__title
        color #817E82
        font-family "Roboto-Bold"
        font-size 25px
        line-height 28px
        text-align left
        margin-bottom 11px

      &__table
        background-image url("/../img/android/icons-partners-android.svg")
        background-repeat no-repeat
        background-position center
        background-size cover
        width 300px
        height 301px
        margin-bottom 22px

      & a
        display block
        text-decoration underline
        margin-bottom 16px
        color #9B9B9B

      & .main-links_normal
        font-family "Roboto-Regular"
        font-size 14px
        line-height 19px
        text-align left

      & .main-links_bold
        font-family "Roboto-Bold"
        font-size 18px
        line-height 19px
        text-align left
        color #fff



