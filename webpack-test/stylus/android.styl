@import '/fonts/Roboto/Roboto-BoldItalic.styl'
@import '/fonts/Roboto/Roboto-Medium.styl'
@import '/fonts/Roboto/Roboto-Bold.styl'
@import '/fonts/Roboto/Roboto-Regular.styl'
@import '/fonts/Roboto/Roboto-Black.styl'

@import '/reset.styl'
@import '/variables.styl'

.main
  @media $mobile
    background-color: #000
    color: #fff
    z-index 1

    &-containerWrapper
      width: 100%       // ???
      height 100%       // ???

    &-content
      margin: 0 30px

    &-top
      position relative
      padding-top: 131px
      text-align: left

      &_gradient
        background: linear-gradient(top, rgba(72,43,216,1) 0%,rgba(229,229,229,1) 71%)
        width: 100%
        height 982px
        position absolute
        z-index 2

      & .zvooq-logo
        width 68.65px
        height 68.65px
        border-radius 4px
        margin-bottom 20px

      &__title-Zvooq
        background-image url("/../img/title-Zvooq.svg")
        background-repeat no-repeat
        background-position center
        background-size cover
        width 137px
        height 71px
        z-index 3
        margin-bottom 29px

      & .installBtn.installBtn_top.googlePlayBtn
        background-color #000
        background-image url("/../img/android/googlePlayBtn.png")
        background-repeat no-repeat
        background-position center
        background-size cover
        border-radius 5px
        width 203px
        height 60px
        margin-bottom 31px

      &__title-music
        position relative
        font-family: "Roboto-Bold"
        font-size: 50px
        line-height 45px
        margin-bottom 33px
        text-align: left

        & .icon-note
          position absolute
          top 53px
          right 186px
          background-image url("/../img/icon-note.svg")
          background-repeat no-repeat
          width 32px
          height 37px

      &__title-listenFree
        font-family: "Roboto-Bold"
        font-size: 25px
        line-height 28px
        margin-bottom: 10px
        text-align: left

      &__title-torrents,
      &__title-trial
        font-family: "Roboto-Regular"
        font-size: 14px
        line-height 19px
        text-align: left

      &__title-torrents
        margin-bottom: 10px

      &-group25
        text-align center
        position relative

        &__title-25
          color #E93889 //pink
          font-family "Roboto-Black"
          font-size 250px
          line-height 45px
          text-align center

        &__title-million
          z-index: 10000
          position absolute
          top 50%
          color #fff
          font-family "Roboto-Bold"
          font-size 25px
          line-height 28px
          text-align center