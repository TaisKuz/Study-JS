        background-image url("/../img/ios/icon-diamond-ios.svg")


      & .icon-butterfly_black
        background-image url("/../img/ios/icon-butterfly-ios.svg")



  &-tryIt
    position relative
    width 100%
    background-color #000
    background-image url("/../img/tryIt_gradient.png")
    background-repeat no-repeat
    background-position -5px -96px
    background-size 104%
    padding: 72px 0 25px
    margin-top -40px
    z-index 1

    &__title-try
      font-family "SFUIDisplay-Heavy", Arial, sans-serif
      font-size 25px
      line-height 28px
      text-align left
      margin-bottom 4px

    &__title-free
      font-family "SFUIDisplay-Regular", Arial, sans-serif
      font-size 14px
      line-height 19px
      margin-bottom 21px


  &-partners
    background-color #2C2C2C
    width 100%
    padding 25px 0 45px

    &__title
      color #817E82
      font-family "SFUIDisplay-Heavy", Arial, sans-serif
      font-size 25px
      line-height 28px
      text-align left
      margin-bottom 19px

    &__table
      background-image url("/../img/partners-icons.png")
      background-repeat no-repeat
      background-position center
      background-size cover
      width 320px
      height 320px
      margin-bottom 19px
      margin-left: -30px

    & a
      display block
      color #9B9B9B

    & .main-links_bold
      font-family "SFUIDisplay-Regular", Arial, sans-serif
      font-size 18px
      line-height 19px
      text-align left
      margin-bottom 18px
      color #fff

    & .main-links_normal
      font-family "SFUIDisplay-Regular", Arial, sans-serif
      font-weight 100
      font-size 14px
      line-height 19px
      margin-bottom 14px
      text-align left