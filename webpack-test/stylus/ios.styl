@import '/fonts/SF/SFUIDisplay-Heavy.styl'
@import '/fonts/SF/SFUIDisplay-Regular.styl'
@import '/fonts/SF/SFUIDisplay-Black.styl'
@import '/fonts/SF/SFUIDisplay-Thin.styl'
@import '/fonts/SF/SFUIDisplay-Bold.styl'

@import '/reset.styl'
@import '/variables.styl'

.main
  @media $mobile
    background-color #000
    color: #fff
    z-index 0

    & .installBtn.appStoreBtn
      background-color #000
      background-image url("/../img/ios/appStoreBtn.png")
      background-repeat no-repeat
      background-position center
      background-size cover
      border-radius 6px
      width 199px
      height 59px

    & .item_inline
      display inline-block

    &-containerWrapper
      width: 100%
      height 100%

    &-content
      margin: 0 30px
      z-index 6

    &-top
      background-color #000
      position relative
      text-align: left
      z-index 1

      &__mini-phones
        position absolute
        background-image url("/../img/ios/mini-phones_ios.png")
        background-repeat no-repeat
        background-position 99px -127px
        background-size 78%
        background-color transparent
        width 427px
        height 451px
        right 0px
        top 0px
        z-index 3

      &_gradient
        background linear-gradient(to bottom, rgba(72,43,216,1) 33%,rgba(72,43,216,0.39) 59%,rgba(53,32,160,0.25) 71%,rgba(0,0,0,0.25) 100%);
        background-color transparent
        width: 100%
        height 1190px
        position absolute
        z-index -1

      &__best-stiсker_up
        border-radius 50%
        width 195px
        height 195px
        position absolute
        top 55px
        right -20px
        background-image url("/../img/ios/oval-sticker.png")
        background-repeat no-repeat
        background-size cover
        text-align center
        transform rotate(22deg)
        z-index 5

        & .stiсker-text
          font-family: "SFUIDisplay-Thin"
          font-size: 13px
          letter-spacing: 1px
          line-height: 19px
          text-align: center
          margin-top: 38px

        & .AppStore
          width 66px
          height 15px
          padding-top 13px

      & .zvooq-logo
        width 59px
        height 59px
        border-radius 4px
        margin-bottom 20px
        margin-top: 125px
        z-index 7

      &__title-Zvooq
        background-image url("/../img/title-Zvooq.svg")
        background-repeat no-repeat
        background-position center
        background-size cover
        width 145px
        height 74px
        margin-bottom 29px
        z-index 7

      & .installBtn.installBtn_top.appStoreBtn
        margin-bottom 31px
        z-index 7

      &__title-music
        position relative
        font-family: "SFUIDisplay-Heavy"
        font-size: 47px
        line-height 45px
        letter-spacing: 2px
        margin-bottom 33px
        text-align: left
        z-index 7

        & .icon-note
          display inline-block
          position relative
          top 5px
          left 3px
          background-image url("/../img/icon-note.svg")
          background-repeat no-repeat
          width 32px
          height 37px
          z-index 8

      &__title-listenFree
        font-family: "SFUIDisplay-Regular"
        font-size: 24px
        line-height 28px
        margin-bottom: 10px
        text-align: left
        z-index 7

      &__title-torrents,
      &__title-trial
        font-family: "SFUIDisplay-Thin"
        font-weight 100
        font-size: 14px
        line-height 19px
        text-align: left
        z-index 7

      &__title-torrents
        margin-bottom: 10px
        z-index 7

      &-group25
        text-align center
        position relative
        z-index 7

        &__title-25
          color #E93889
          font-family "SFUIDisplay-Black"
          font-size 210px
          line-height 210px
          width 100%
          text-align center
          z-index 8

        &__title-million
          z-index: 10000
          position absolute
          top 42%
          width 100%
          color #fff
          font-family "SFUIDisplay-Regular"
          font-size 25px
          line-height 28px
          text-align center
          z-index 9

      &-playGroup
        height 418px
        width 100%
        position relative
        z-index 7

        & .play-home,
        & .play-vk,
        & .play-training
          position absolute
          background-repeat no-repeat
          background-position center
          background-size cover
          z-index 10

        & .play-home
          background-image url("/../img/ios/play-home-ios.png")
          width 318px
          height 208.85px
          right -30px
          top 0px
          z-index 14

        & .play-vk
          background-image url("/../img/ios/play-vk-ios.png")
          width: 321px
          height: 167.9px
          left: 19%
          top: 69px
          z-index 11

        & .play-training
          background-image url("/../img/ios/play-training-ios.png")
          width 318px
          height 208.85px
          left -30px
          bottom 0px
          z-index 12

      &__title-thousand
        margin-top -10px
        margin-bottom 13px
        font-family "SFUIDisplay-Regular"
        font-size 25px
        line-height 28px
        text-align left

      &__title-oneClick
        font-family "SFUIDisplay-Thin"
        font-size 14px
        line-height 19px
        text-align left
        margin-bottom 10px

        z-index 10

      &-heartWaves
        position relative
        left -30px
        background-image url("/../img/heartWaves.svg")
        background-repeat no-repeat
        background-position center
        background-size cover
        width 268px
        height 147px
        z-index 6

      &__title-smart
        font-family "SFUIDisplay-Regular"
        font-size 25px
        line-height 28px
        text-align left
        margin-bottom 16px
        z-index 10

      &__title-allULike
        font-family "SFUIDisplay-Thin"
        font-size 14px
        line-height 19px
        text-align left
        margin-bottom 35px

      &__title-etc
        font-family "SFUIDisplay-Regular"
        font-size 25px
        line-height 28px
        text-align left
        margin-bottom 12px

      &-functionsGroup
        margin-right -30px
        margin-bottom 20px

        & .functionsGroup__item
          border-bottom 1px solid #4A4A4A
          padding 8px 0
          display flex
          align-items flex-start

          &:last-child
            border-bottom none

          &-title
            font-family "SFUIDisplay-Thin"
            font-size 14px
            line-height 19px
            letter-spacing 1px
            text-align left

          &-icon
            margin-top 2px
            margin-right 19px
            background-repeat no-repeat
            background-position top left
            background-size 100%

            &.icon-star_color
              background-image url("/../img/icon-star_color.svg")
              width 15px
              height 14px

            &.icon-butterfly_color
              background-image url("/../img/icon-butterfly_color.svg")
              width 14px
              height 12px

            &.icon-shazam_color
              background-image url("/../img/icon-shazam_color.png")
              width 13.3px
              height 13.34px

            &.icon-cloud_color
              background-image url("/../img/icon-cloud_color.svg")
              width 15px
              height 10px

    &-premium
      position relative
      background-color #fff
      width 97.5%
      padding 32px 0 5px
      border-radius 10px
      margin 0 auto
      z-index 3

      & .main-content
        margin-right 0

      & .icon-cherry
        width 67px
        height 67px
        background-image url("/../img/icon-cherry.svg")
        background-repeat no-repeat
        background-position center
        background-size cover
        border-radius 50%

      &__title
        margin-top 11px
        margin-bottom 25px
        color #000
        font-family "SFUIDisplay-Bold"
        font-size 25px
        line-height 28px
        text-align left

      &-functionsGroup
        padding-bottom 15px

      & .functionsGroup__item
        padding-bottom 15px
        display flex
        align-items center

        &-title
          color #000
          font-family "SFUIDisplay-Regular"
          font-size 16px
          line-height 24px
          opacity .87

        &-icon
          margin-right 15px
          background-repeat no-repeat
          background-position top left
          background-size 20px 20px
          width 20px
          height 20px

        & .icon-download_black
          background-image url("/../img/ios/icon-download-ios.svg")


        & .icon-plane_black
          background-image url("/../img/ios/icon-plane-ios.svg")


        & .icon-rewind_black
          background-image url("/../img/ios/icon-rewind-ios.svg")


        & .icon-diamond_black
          background-image url("/../img/ios/icon-diamond-ios.svg")


        & .icon-butterfly_black
          background-image url("/../img/ios/icon-butterfly-ios.svg")


    &-tryIt
      position relative
      width 100%
      background-color #000
      background-image url("/../img/tryIt_gradient.png")
      background-repeat no-repeat
      background-position -5px -96px
      background-size 104%
      padding: 87px 0 24px
      margin-top -40px
      z-index 1

      &__title-try
        font-family "SFUIDisplay-Regular"
        font-size 25px
        line-height 28px
        text-align left
        margin-bottom 4px

      &__title-free
        font-family "SFUIDisplay-Thin"
        font-size 14px
        line-height 19px
        margin-bottom 25px

    &-partners
      background-color #2C2C2C
      width 100%
      padding 25px 0 30px

      &__title
        color #817E82
        font-family "SFUIDisplay-Heavy"
        font-size 25px
        line-height 28px
        text-align left
        margin-bottom 11px

      &__table
        background-image url("/../img/ios/icons-partners-ios.png")
        background-repeat no-repeat
        background-position center
        background-size cover
        width 262px
        height 175px
        margin-bottom 22px

      & a
        display block
        text-decoration underline
        margin-bottom 16px
        color #9B9B9B

      & .main-links_normal
        font-family "SFUIDisplay-Regular"
        font-weight 100
        font-size 14px
        line-height 19px
        text-align left

      & .main-links_bold
        font-family "SFUIDisplay-Thin"
        font-size 18px
        line-height 19px
        text-align left
        color #fff