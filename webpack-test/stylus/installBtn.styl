.installBtn
  &.btn-app-store
    background: url(/../img/app-store.svg) no-repeat !important

  &.btn-google-play
    background: url(/../img/google-play.svg) no-repeat !important;
    margin-left: -3px

  &.btn-app-store,
  &.btn-google-play
    background: #000 center
    background-size: cover
    border-radius: 6px

  // HEADER -------------------------
  &.header__installBtn
    &.btn-app-store,
    &.btn-app-store a
      width: 142px
      height: 44px
      margin-right: -7px
    &.btn-google-play,
    &.btn-google-play a
      width: 137.48px
      height: 42.33px

  // FOOTER -------------------------
  &.footer__installBtn
    &.btn-app-store,
    &.btn-app-store a
      width: 181px
      height: 53px
      margin-right: 24.3px
    &.btn-google-play,
    &.btn-google-play a
      width: 174.74px
      height: 51.33px