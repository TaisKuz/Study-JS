//-------- global selectors

body
#page-content
  background: -webkit-linear-gradient(-45deg, rgba(95,228,237,1) 0%, rgba(176,98,243,1) 79%, rgba(176,98,243,1) 85%, rgba(118,78,156,1) 100%)

a
  display: inline-block

  &:hover
    cursor: pointer

p
  color: main-text-color
  text-align: center

//------ global selectors end

.main
  width: 100%

  &,
  &-containerWrapper,
  & .footer
    height: 100%

  &-containerWrapper,
  & .footer
    width: 1024px
    margin: 0 auto

  &-pageTitle
    color: main-text-color
    text-align: center
    font-size: 37px;
    line-height: 47px;
    letter-spacing: 0.8px;

  &-row-1,
  &-row-2
    display: flex
    flex-wrap: nowrap

  &-row-1
    justify-content: center
    align-items: center

  &-row-1 a
    margin: 26px 42px 40px 23px
    &:first-child
      width: 207px
      height: 53px
    &:last-child
      width: 191.63px
      height: 54.21px

  &-pageTitle,
  &-row-3 p:nth-child(2)
    font-family: "MuseoSansCyrl-normal"

  &-row-2
    margin: 61px 73px 0 35px
    align-items: flex-end
    justify-content: space-around

  &-row-2 &-column-2 p:nth-child(2),
  &-row-3 p:nth-child(3)
    font-family: "MuseoSansCyrl-thin"

  &-column
    display: inline-block

  &-column-1
    & img:first-child
      margin-right: 15px

  &-column-2
    margin: 25px 39px 12px 78px
    &,
    p
      width: 310px
    & > p
      text-align: left !important;
    & > p:first-child
      text-transform: uppercase
      font-size: 22.4px
      line-height: 29.6px
      margin-bottom: 15.8px
      font-family: "MuseoSansCyrl-normal"
    & p:nth-child(2)
      font-size: 21.28px
      line-height: 23.52px
      letter-spacing: 0.2px

  &-singIn
    cursor: pointer
    display: inline
    &:hover
      color: singIn__hover-color
      opacity: .9
      border-radius: borderRadius

  &-row-3
    margin-top: 120px
    text-align: center
    & a img
      margin-bottom: 30px
    & p:nth-child(2)
      font-size: 48px
      line-height: 57px
      margin-bottom: 5px
    & p:nth-child(3)
      font-size: 27px
      line-height: 47px
      margin-bottom: 38px

  .footer
    border-top: 1px solid #fff
    width:100%