@import '/fonts/MuseoSansCyrl-normal.styl'
@import '/fonts/MuseoSansCyrl-thin.styl'
@import '/reset.styl'

main-text-color = #fff
borderRadius = 4px

//-------- global selectors
a
  display: inline-block
  &:hover
    cursor: pointer

p
  color: main-text-color
  text-align: center
//------ global selectors end

.main
  width: 100%
  background: -webkit-linear-gradient(-45deg, rgba(95,228,237,1) 0%, rgba(176,98,243,1) 79%, rgba(176,98,243,1) 85%, rgba(118,78,156,1) 100%)
  overflow: hidden
  height: 100%

  &-contentWrapper,
  &-footer
    height: 100%
    width: 1024px
    margin: 0 auto

  &-topLogos
    display: flex
    flex-wrap: nowrap
    justify-content: center
    align-items: center

  &-zvooqLogo
    background-image: url('/img/zvooqLogo.svg')
    background-position: center
    background-size: cover
    background-repeat: no-repeat

    &_topLogos
      margin: 26px 42px 40px 23px
      display: inline-block
      width: 207px
      height: 53px

    &_middle
      width: 207px
      height: 53px
      display: inline-block

  &-zvooqLogoLink
    display: inline-block
    width: 207px
    height: 53px
    &:hover
      cursor: pointer

  &-zvooqLogoWrapper
    width: 100%
    height: 53px
    margin-top: 120px
    margin-bottom: 30px
    text-align: center

  &-shazamLogo
    margin: 26px 42px 40px 23px
    background-image: url('/img/shazamLogo.png')
    background-position: center
    background-size: cover
    background-repeat: no-repeat

  &-shazamLogo,
  &-shazamLogoLink
    display: inline-block
    width: 191.63px
    height: 54.21px
    &:hover
      cursor: pointer

  &-pageTitle
    color: #ffffff
    text-align: center
    font-size: 37px
    line-height: 47px
    letter-spacing: 0.8px
    font-family: "Museo"
    font-weight: 300

  &-singIn
    cursor: pointer
    display: inline
    &:hover
      color: deeppink
      opacity: .9
      border-radius: 4px

  &-phonesGroupWrapper
    display: flex
    flex-wrap: nowrap
    margin: 61px 73px 0 35px
    align-items: flex-end
    justify-content: space-around

  &-phonesGroup
    display: inline-block

  &-iphone
    display: inline-block
    background-position: center
    background-size: cover
    background-repeat: no-repeat

    &-white
      margin-right: 15px
      width: 213.69px
      height: 455.98px
      background-image: url('/img/iphoneWhite.png')

    &-black
      width: 245.69px
      height: 455.98px
      background-image: url('/img/iphoneBlack.png')

  &-installGroup
    display: inline-block
    margin: 25px 39px 12px 78px
    width: 310px

  &-installGroupTitle
    color: #ffffff
    width: 310px
    text-align: left
    text-transform: uppercase
    font-size: 22.4px
    line-height: 29.6px
    margin-bottom: 15.8px
    font-family: "Museo", Arial, sans-serif
    font-weight: 300

  &-installGroupDescription
    color: #ffffff
    width: 310px
    text-align: left
    font-size: 21.28px
    line-height: 23.52px
    letter-spacing: 0.2px
    font-family: "Museo", Arial, sans-serif
    font-weight: 100

  &-freeAppTitle
    color: #ffffff
    font-family: "Museo", Arial, sans-serif
    font-weight: 300
    font-size: 48px
    line-height: 57px
    margin-bottom: 5px
    text-align center

  &-freeAppDescription
    color: #ffffff
    font-family: "Museo", Arial, sans-serif
    font-weight: 100
    font-size: 27px
    line-height: 47px
    margin-bottom: 38px
    text-align center

  &-footer
    border-top: 1px solid #fff
    width:100%