.loginButton
  display: block
  height: 50px
  width: 100%
  border-radius: 4px
  font: 100 15px/18px "Museo", Arial, sans-serif
  color: #fff
  cursor: pointer
  margin-top: 10px

  &:hover
    opacity: 0.9

  &_vk
    background-image: url('/../../img/loginPopup/vkontakte.svg')
    background-position: 19px 50%
    background-size: 15px
    background-color: #356ca1

  &_fb
    background-image: url('/../../img/loginPopup/facebook.svg')
    background-position: 22px 50%
    background-size: 10px
    background-color: #475e97

  &_vk,
  &_fb
    margin-bottom: 10px
    padding-left: 54px
    position: relative
    text-align: left
    background-repeat no-repeat

  &_lightBlue
    background-color: #4baeec

  &_small
    width: 135px !important

  &_email,
  &_sms
    display: inline-block
    margin-top: 0

  &_email
    float: left

  &_sms
    margin-left: 10px

    small
      pointer-events: none
      font: 100 13px/15px "Museo", Arial, sans-serif
      opacity: 0.6