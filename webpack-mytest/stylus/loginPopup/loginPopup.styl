.loginPopup
  z-index: 10
  top: 0
  left: 0
  width: 100%
  height: 100%
  position: fixed !important

  &-bannerInner
    overflow: auto
    -webkit-overflow-scrolling: touch
    top: 0
    left: 0
    width: 100%
    height: 100%
    position: absolute !important
    background-color: rgba(0,0,0,0.5)

  &-bannerScroller
    position: absolute
    width: 100%
    height: 100%

  &-bannerPointer
    top: 0
    left: 0
    width: 100%
    height: 100%
    position: fixed !important
    cursor: pointer

  &-bannerWindow
    z-index: 10040
    width: 320px
    min-height: 381px
    cursor: default
    position: relative
    top: 100px
    margin: 0 auto 100px
    border-radius: 3px
    background: #fff
    transition: transform 0.6s
    transition-property: transform
    transition-duration: 0.6s
    transition-timing-function: initial
    transition-delay: initial