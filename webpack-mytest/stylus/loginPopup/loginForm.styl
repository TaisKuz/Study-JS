.loginForm
  margin: .75em 0 1em

  &__input
    display: block
    width: 100%
    height: 50px
    padding: 0 15px
    margin-bottom: 10px
    box-sizing: border-box
    box-shadow: inset 0 0 0 1px #f1f1f1
    color: #7c7c7c
    font: 100 15px/17px "Museo", Arial, sans-serif
    -webkit-tap-highlight-color: rgba(255,255,255,0)

  input[type="password"]
    margin-bottom: 20px