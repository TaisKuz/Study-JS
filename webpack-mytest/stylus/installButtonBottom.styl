.installButtonBottom
  background-color: #000
  background-position: center
  background-repeat: no-repeat
  background-size: cover
  border-radius: 6px

  &-apple
    background-image: url('/img/appStore.svg') !important
    width: 181px
    height: 53px
    margin-right: 24.3px

  &-appleLink
    display: inline-block
    width: 181px
    height: 53px
    margin-right: 24.3px

    &:hover
      cursor: pointer

  &-google
    background-image: url('/img/googlePlay.svg') !important
    margin-left: -3px
    width: 174.74px
    height: 51.33px

  &-googleLink
    display: inline-block
    width: 174.74px
    height: 51.33px

    &:hover
      cursor: pointer