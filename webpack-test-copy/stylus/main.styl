@import '/fonts/MuseoSansCyrl-normal.styl'
@import '/fonts/MuseoSansCyrl-thin.styl'
@import '/reset.styl'

main-text-color = #fff
borderRadius = 4px
singIn__hover-color = deeppink

//-------- global selectors
a
  display: inline-block
  &:hover
    cursor: pointer

p
  color: main-text-color
  text-align: center
//------ global selectors end

.main
  width: 100%
  background: -webkit-linear-gradient(-45deg, rgba(95,228,237,1) 0%, rgba(176,98,243,1) 79%, rgba(176,98,243,1) 85%, rgba(118,78,156,1) 100%)
  overflow: hidden
  height: 100%

  &-containerWrapper,
  &-footer
    height: 100%
    width: 1024px
    margin: 0 auto

  &-logos
    display: flex
    flex-wrap: nowrap
    justify-content: center
    align-items: center

    &-zvooq
      background-image: url('/../img/Zvooq-logo.svg')
      background-position: center
      background-size: cover
      background-repeat: no-repeat

    &-zvooq,
    &-shazam
      margin: 26px 42px 40px 23px

    &-zvooq,
    &-zvooq__link
      display: inline-block
      width: 207px
      height: 53px
      &:hover
        cursor: pointer

    &-shazam
      background-image: url('/../img/Shazam-logo.png')
      background-position: center
      background-size: cover
      background-repeat: no-repeat

    &-shazam,
    &-shazam__link
      display: inline-block
      width: 191.63px
      height: 54.21px
      &:hover
        cursor: pointer

  &-pageTitle
    color: #ffffff
    text-align: center
    font-size: 37px
    line-height: 47px
    letter-spacing: 0.8px
    font-family: "MuseoSansCyrl-normal"
    font-weight: 300

    &-singIn
      cursor: pointer
      display: inline
      &:hover
        color: singIn__hover-color
        opacity: .9
        border-radius: 4px

  &-phonesGroup
    display: flex
    flex-wrap: nowrap
    margin: 61px 73px 0 35px
    align-items: flex-end
    justify-content: space-around

    &-phones
      display: inline-block

      .iphone-white
        display: inline-block
        margin-right: 15px
        width: 219.69px
        height: 455.98px
        background-image: url('/../img/iphone-white.png')
        background-position: center
        background-size: cover
        background-repeat: no-repeat

      .iphone-black
        display: inline-block
        width: 219.69px
        height: 455.98px
        background-image: url('/../img/iphone-black.png')
        background-position: center
        background-size: cover
        background-repeat: no-repeat

    &-install
      display: inline-block
      margin: 25px 39px 12px 78px
      width: 310px

      .title-now
        color: #ffffff
        width: 310px
        text-align: left
        text-transform: uppercase
        font-size: 22.4px
        line-height: 29.6px
        margin-bottom: 15.8px
        font-family: "MuseoSansCyrl-normal"
        font-weight: 300

      .title-shazam
        color: #ffffff
        width: 310px
        text-align: left
        font-size: 21.28px
        line-height: 23.52px
        letter-spacing: 0.2px
        font-family: "MuseoSansCyrl-thin"
        font-weight: 100

  &-zvooq-logo
    width: 100%
    height: 53px
    margin-top: 120px
    margin-bottom: 30px
    text-align: center

    &__link
      width: 207px
      height: 53px
      display: inline-block
      background-image: url('/../img/Zvooq-logo.svg')
      background-position: center
      background-size: cover
      background-repeat: no-repeat

  &-title-freeApp
    color: #ffffff
    font-family: "MuseoSansCyrl-normal"
    font-weight: 300
    font-size: 48px
    line-height: 57px
    margin-bottom: 5px

  &-title-numberOne
    color: #ffffff
    font-family: "MuseoSansCyrl-thin"
    font-weight: 100
    font-size: 27px
    line-height: 47px
    margin-bottom: 38px

  &-footer
    border-top: 1px solid main-text-color
    width:100%